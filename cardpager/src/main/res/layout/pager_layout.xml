<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:clipChildren="false"
        android:background="#e0000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:layout_centerInParent="true"
        android:id="@+id/viewpager"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_height="350dp"
        >

    </android.support.v4.view.ViewPager>
        <livesun.cardpager.ui.IndicatorView
            android:layout_marginTop="5dp"
            android:id="@+id/indicator"
            android:layout_below="@+id/viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicator_count="5"
            app:indicator_radius="4dp"
            app:indicator_defaultColor="#fff"
            app:indicator_pading="5dp"
            app:indicator_selectColor="#33000000"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/close"
            android:layout_below="@+id/indicator"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/common_theme_close"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
